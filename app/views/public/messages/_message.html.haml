.row.test1
  - user = message.user
  - if user.nickname == current_user.nickname
    .col
    .col.text-right
      %small
        = user.name
        = message.created_at.strftime('%Y/%m/%d %H:%M')
      .bg-info.rounded.m-1.p-1
        = simple_format(message.message)
  - else
    .col
      %small
        = user.name
        = message.created_at.strftime('%Y/%m/%d %H:%M')
      .bg-secondary.rounded.m-1.p-1
        = simple_format(message.message)
    .col
:javascript
    // チャットの振り分け
  document.getElementsByClassName("bg-info")
    
  if ()
    
    
    if ($('#messages').data('current_user_id') == "#{message.user_id}") {
      $('#messageid<%= message.id %>').addClass('red')
    } else {
      $('#messageid<%= message.id %>').addClass('red')
    }
  }